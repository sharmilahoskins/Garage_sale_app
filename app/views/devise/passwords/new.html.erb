<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: 'edit_form' %><br />
    <%= f.email_field :email, autofocus: true, class: 'edit_form' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'button_style' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
